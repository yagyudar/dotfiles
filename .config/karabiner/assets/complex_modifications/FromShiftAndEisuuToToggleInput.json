{
    "title": "Shift+Escで入力方法を切り替える",
    "rules": [{
        "description": "Toggle Input By Shift and Esc",
        "manipulators": [{
            "conditions": [{
                "type": "input_source_if",
                "input_sources": [{
                    "language": "ja"
                }]
            }],
            "from": {
                "key_code": "escape",
                "modifiers": {
                    "mandatory": [ "right_shift" ]
                }
            },
            "to": [{
                "key_code": "japanese_eisuu"
            }],
            "type": "basic"
        }, {

            "conditions": [{
                "type": "input_source_if",
                "input_sources": [{
                    "language": "en"
                }]
            }],
            "from": {
                "key_code": "escape",
                "modifiers": {
                    "mandatory": [ "right_shift" ]
                }
            },
            "to": [{
                "key_code": "japanese_kana"
            }],
            "type": "basic"
        }]
    }]
}
